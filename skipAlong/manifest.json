{
  "manifest_version": 2,
  "name": "skipAlong",
  "version": "1.0",
  
  "description": "Skips Youtube Ads.",
  
  "icons": { "48": "icons/speedButton.png" },

  "permissions": [ "activeTab", "storage" ],
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["skipAlong.js"]
    }
  ],
  
  "browser_action": {
    "default_icon": "icons/speedButton.png",
    "default_title": "skipAlong"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
  